
<div class="container">
  <section class="search">
    <h2>Buscar autores</h2>
    <form action="/authors" method="GET" class="search-form">
      <label for="name">Nombre</label>
      <input type="text" name="name" id="name" value="<%= searchQuery.name %>">
      <button type="submit" class="btn">Buscar</button>
    </form>  
  </section>
  
  <section class="all-authors">
    <% authors.forEach(author => { %>
      <h3>
        <%= author.name %>
      </h3>
    <% }) %>
  </section>

  <section>
    <h2 class="title">Agregar nuevo autor</h2>
    <br>
    <form action="/authors" method="POST" class="new-book">
      <input type="text" name="name" id="name" >
      <div class="buttons">
        <a href="/books" class="btn-cancel">Cancelar</a>
        <button type="submit" class="btn">Crear</button>
      </div>
    </form>
  </section>

  
</div>