<div class="container">
  <section class="search">
    <h2>Buscar libros</h2>
    <form action="/books" method="GET" class="search-form">
      <label for="name">Nombre</label>
      <input type="text" name="name" id="name" value="<%= searchQuery.name %>">
      <button type="submit" class="btn">Buscar</button>
    </form>
  </section>
  
  <section class="all">
    <% books.forEach(book => {%>
      <a href="books/<%= book.id %>">
        <div class="book-card">
          <img src="<%= book.coverImage %>" alt="<%= book.name %>" class="cover">
        </div>
      </a>
    <% }) %>
  </section>
</div>