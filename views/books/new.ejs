<div class="container">
  <h2 class="title">Ingresar nuevo libro</h2>
  
    
  <form action="/books" method="POST" enctype="multipart/form-data" class="new-book">

    <div class="form-input">
      <label for="name">Nombre:</label>
      <input type="text" name="name" id="name">
    </div>

    <div class="form-input">
      <label for="author">Autor:</label>
      <select name="author">
        <option value="" disabled selected></option>
        <% authors.forEach(author => { %>
          <option value="<%= author.id %>"><%= author.name %></option>
        <% }) %>
      </select> 
    </div>
    
    <div class="form-input">
      <label for="publishDate">Fecha de publicación:</label>
      <input type="date" name="publishDate" id="publishDate" value="<%= book.publishDate %>">
    </div>
    
    <div class="form-input">
      <label for="pageCount">Cantidad de páginas:</label>
      <input type="number" name="pageCount" id="pageCount" value="<%= book.pageCount %>">
    </div>

    <div class="form-input">
      <label for="description">Descripción:</label>
      <textarea name="description" id="description" value="<%= book.description %>"> </textarea>
    </div>
    
    <div class="form-input">
      <label for="img-centered">Portada:</label>
      <div class="img-centered">
        <img 
          id="pic" 
          class="cover-preview"
          src="https://alte-rego.com/wp-content/uploads/2020/09/pre.jpg"/>
        <label for="cover" class="cover-file">Seleccionar archivo</label>
        <input 
          type="file" 
          name="cover" 
          id="cover" 
          value="<%= book.cover %>"
          oninput="pic.src=window.URL.createObjectURL(this.files[0])"> 
      </div>
      
    </div>
    
    <div class="buttons">
      <a href="/books" class="btn-cancel">Cancelar</a>
      <button type="submit" class="btn">Agregar</button>
    </div>   

  </form>
</div>
